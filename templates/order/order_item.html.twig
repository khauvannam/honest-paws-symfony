{% extends 'base.html.twig' %}

{% block title %}Order Item{% endblock %}

{% block body %}
<div class="w-full flex justify-center items-center bg-gray-100 min-h-screen">
    <div class="w-full max-w-4xl p-8 bg-white rounded-lg shadow-md flex flex-wrap">
        <div class="w-full md:w-2/3 px-4">
            <!-- Contact Information -->
            <h2 class="text-2xl font-semibold mb-4">Contact</h2>
            <div class="border-t border-gray-300 pt-4 mb-8">
                <form class="space-y-4">
                    <div class="flex flex-col">
                        <label for="email" class="text-sm font-medium">Email</label>
                        <input type="email" id="email" class="border border-gray-300 rounded-md p-2 mt-1" placeholder="Email" required>
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" id="newsletter" class="mr-2">
                        <label for="newsletter" class="text-sm">Email me with news and offers</label>
                    </div>
                </form>
            </div>

            <!-- Delivery Information -->
            <h2 class="text-2xl font-semibold mb-4">Delivery</h2>
            <div class="border-t border-gray-300 pt-4 mb-8">
                <form class="space-y-4">
                    <div class="flex flex-col">
                        <label for="country" class="text-sm font-medium">Country/Region</label>
                        <select id="country" class="border border-gray-300 rounded-md p-2 mt-1">
                            <option value="United States">United States</option>
                            <!-- Add more countries if needed -->
                        </select>
                    </div>
                    <div class="flex flex-col md:flex-row md:space-x-4">
                        <div class="flex-1">
                            <label for="first-name" class="text-sm font-medium">First name</label>
                            <input type="text" id="first-name" class="border border-gray-300 rounded-md p-2 mt-1 w-full" required>
                        </div>
                        <div class="flex-1">
                            <label for="last-name" class="text-sm font-medium">Last name</label>
                            <input type="text" id="last-name" class="border border-gray-300 rounded-md p-2 mt-1 w-full" required>
                        </div>
                    </div>
                    <div class="flex flex-col">
                        <label for="address" class="text-sm font-medium">Address</label>
                        <input type="text" id="address" class="border border-gray-300 rounded-md p-2 mt-1" required>
                    </div>
                  
                    <div class="flex flex-col md:flex-row md:space-x-4">
                        <div class="flex-1">
                            <label for="city" class="text-sm font-medium">City</label>
                            <input type="text" id="city" class="border border-gray-300 rounded-md p-2 mt-1 w-full" required>
                        </div>
                       
                        <div class="flex-1">
                            <label for="zip" class="text-sm font-medium">ZIP code</label>
                            <input type="text" id="zip" class="border border-gray-300 rounded-md p-2 mt-1 w-full" required>
                        </div>
                    </div>
                    <div class="flex flex-col">
                        <label for="phone" class="text-sm font-medium">Phone (optional)</label>
                        <input type="tel" id="phone" class="border border-gray-300 rounded-md p-2 mt-1">
                    </div>
                    <div class="flex items-center">
                        <input type="checkbox" id="save-info" class="mr-2">
                        <label for="save-info" class="text-sm">Save this information for next time</label>
                    </div>
                </form>
            </div>

            <!-- Shipping Method -->
            <h2 class="text-2xl font-semibold mb-4">Shipping method</h2>
            <div class="border-t border-gray-300 pt-4">
                <p class="text-sm mb-4">
                    * All orders with both one-time and subscription products will ship together using the subscription shipping method selected below.
                </p>
                <input type="text" placeholder="Enter your shipping address to view available shipping methods." class="border border-gray-300 rounded-md p-2 mt-1 w-full">
            </div>
        </div>

        <!-- Order Summary -->
        <div class="w-full md:w-1/3 px-4 mt-8 md:mt-0">
            <h2 class="text-2xl font-semibold mb-4">Order Summary</h2>
            <div class="border-t border-gray-300 pt-4 mb-8">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center">
                        <img src="{{ asset('img/product-image.png') }}" alt="Product Image" class="w-16 h-16 mr-3 rounded-md">
                        <div>
                            <p class="font-medium">Agility Bundle</p>
                            <p class="text-sm text-gray-600">250 mg - 25 - 49 lbs</p>
                        </div>
                    </div>
                
                </div>

                <div class="flex flex-col mb-8">
                    <label for="discount" class="text-sm font-medium mb-2">Discount code</label>
                    <div class="flex">
                        <input type="text" id="discount" class="border border-gray-300 rounded-l-md p-2 flex-1" placeholder="Enter discount code">
                        <button class="bg-gray-200 text-gray-700 py-2 px-4 rounded-r-md hover:bg-gray-300">Apply</button>
                    </div>
                </div>

                <div class="flex justify-between mb-2">
                    <span class="text-gray-600">Subtotal</span>
                    <span class="font-medium">$162.76</span>
                </div>

                <div class="flex justify-between mb-2">
                    <span class="text-gray-600">Shipping</span>
                    <span class="font-medium">Enter shipping address</span>
                </div>

                <div class="border-t border-gray-300 pt-4 flex justify-between font-bold text-xl">
                    <span>Total</span>
                    <span class="text-blue-600">$162.76</span>
                </div>
            </div>

            <div class="flex justify-between items-center mt-8">
                <a href="{{ path('order_item') }}" class="text-gray-600 hover:underline">Back to Shop</a>
                <button class="bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700">Continue to Payment</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
