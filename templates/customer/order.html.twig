{% extends 'base.html.twig' %}
{% block title %}
    Customer Portal
{% endblock %}
{% block body %}
    <div class="bg-[#00205c] py-4">
        <div class="max-w-[1300px] mx-auto flex justify-center space-x-8">
            <a href="/customer" class="text-white text-xl font-bold hover:underline">
                Thông tin
            </a>
            <a href="{{ path('customer_order', {'id' : app.user.id}) }}" class="text-white text-xl font-bold hover:underline">
                Đơn hàng
            </a>
        </div>
    </div>

        <div class="container mx-auto mt-8 px-6">
        <div class="mt-8">
            <h3 class="font-bold text-gray-900">Lịch sử đặt hàng</h3>
            {% for order in orders %}
                <div class="border rounded-lg shadow-sm p-6 bg-white mt-4">
                    <p class="text-gray-700"><strong class="text-gray-900">Ngày đặt hàng:</strong> {{ order.getOrderDate()|date('j F, Y') }}</p>
                    <p class="text-gray-700"><strong class="text-gray-900">Tổng giá trị:</strong> {{ order.getOrderTotal()|number_format(2, '.', ',') }}$</p>
                    <p class="text-gray-700"><strong class="text-gray-900">Địa chỉ:</strong> {{ order.getShippingAddress() }}</p>
                    <p class="text-gray-700"><strong class="text-gray-900">Hình thức:</strong> {{ order.getShippingMethodId() }}</p>
                </div>
            {% else %}
                <p class="text-gray-500">Bạn chưa đặt đơn hàng nào!</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
