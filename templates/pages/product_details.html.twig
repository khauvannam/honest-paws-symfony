{% extends 'base.html.twig' %}

{% block body %}
    {% if product %}
        <div class="container mx-auto px-4 py-8">
            <div class="flex">
                <!-- Product Image -->
                <div class="w-1/2">
                    <img src="{{ asset('img/blobs/' ~ product.imageUrl) }}" alt="Product Image">
                </div>

                <!-- Product Details -->
                <div class="w-1/2 pl-8">
                    <h2 class="text-4xl font-bold mb-4">{{ product.name }}</h2>
                    <p class="text-lg mb-2">{{ product.description }}</p>
                    <div class="flex items-center mb-4">
                        <div class="text-3xl font-bold text-red-600 mr-2"></div>
                        <div class="text-gray-500 line-through"></div>
                        <div class="ml-4 bg-red-100 text-red-600 px-2 py-1 rounded">SAVE</div>
                    </div>

                    <!-- Subscription Options -->
                    <div class="mb-4">
                        <label>
                            <input type="radio" name="purchase_option" value="subscribe" checked>
                            Subscribe & Save 15% 
                        </label>
                        <br>
                        <label>
                            <input type="radio" name="purchase_option" value="one_time">
                            One Time Purchase
                        </label>
                    </div>

                    <!-- Delivery Options -->
                    <div class="mb-4">
                        <label for="delivery_option">Deliver Every:</label>
                        <select id="delivery_option" name="delivery_option">
                            <option value="30_days">30 Days</option>
                            <option value="60_days">60 Days</option>
                        </select>
                    </div>

                    <!-- Dog Size Options -->
                    <div class="mb-4">
                        <label for="dog_size">Dog Size:</label>
                        <select id="dog_size" name="dog_size">
                            <option value="small">125 mg - Up to 25 lbs</option>
                            <option value="medium">250 mg - 26 to 50 lbs</option>
                            <option value="large">500 mg - 51 lbs and up</option>
                        </select>
                    </div>

                    <!-- Quantity Selector -->
                    <div class="mb-4 flex items-center">
                        <button class="bg-gray-200 text-gray-800 px-2 py-1">-</button>
                        <input type="text" value="1" class="w-12 text-center mx-2 border border-gray-300 rounded">
                        <button class="bg-gray-200 text-gray-800 px-2 py-1">+</button>
                    </div>

                    <!-- Stock Status -->
                    <div class="mb-4 text-green-600">Item is in stock</div>

                    <!-- Add to Cart Button -->
                    <button class="bg-blue-600 text-white px-6 py-2 rounded-full">Add to Cart</button>
                    <div class="mt-2">Earns 275 rewards points!</div>

                    <!-- Product Description -->
                    <div class="mt-6">
                        <h3 class="text-xl font-semibold mb-2">Product Use Guide</h3>
                        <p>{{ product.productuseguide }}</p>
                    </div>
                </div>t
            </div>
        </div>
    {% else %}
        <p>Product not found.</p>
    {% endif %}
{% endblock %}
