{% extends 'base.html.twig' %}

{% block body %}
<div action="{{ path('detail_product') }}"> 
    <!-- Breadcrumb Navigation -->
    <div class="w-full pt-5 px-10 flex justify-center">
        <div class="w-full max-w-[1300px] flex items-center text-main">
            <a href="/" class="hover:underline">Home</a>
            <span class="mx-2">></span>
            <a href="/collections" class="hover:underline">Collections</a>
            <span class="mx-2">></span>
            <span>Shop All</span>
        </div>
    </div>

    <!-- Product Detail Section -->
    <div class="w-full pt-10 px-10 flex justify-center">
        <div class="w-full max-w-[1300px] flex flex-wrap justify-between">

            <!-- Product Image & Highlights -->
            <div class="w-full md:w-6/12 mt-10 md:mt-0">
                <div class="relative">
                    <img src="{{ asset('img/products/' ~ product.imageUrl) }}" alt="{{ product.name }}" class="rounded-lg shadow-md w-full">
                    <span class="absolute top-4 left-4 bg-orange-500 text-white font-bold px-3 py-1 rounded">Bestseller</span>
                </div>
                <div class="mt-6 space-y-4">
                    <div class="bg-gray-100 p-4 rounded-md flex items-center space-x-4">
                        <img src="{{ asset('img/icons/USA_200x.svg') }}" alt="USA Made" class="w-8 h-8">
                        <p class="text-main font-medium">USA Made</p>
                    </div>
                    <div class="bg-gray-100 p-4 rounded-md flex items-center space-x-4">
                        <img src="{{ asset('img/icons/traceable.svg') }}" alt="100% Traceable" class="w-8 h-8">
                        <p class="text-main font-medium">100% Traceable</p>
                    </div>
                    <div class="bg-gray-100 p-4 rounded-md flex items-center space-x-4">
                        <img src="{{ asset('img/icons/lab.svg') }}" alt="Lab Tested" class="w-8 h-8">
                        <p class="text-main font-medium">Lab Tested</p>
                    </div>
                    <div class="bg-gray-100 p-4 rounded-md flex items-center space-x-4">
                        <img src="{{ asset('img/icons/organic.svg') }}" alt="USDA Organic" class="w-8 h-8">
                        <p class="text-main font-medium">USDA Organic</p>
                    </div>
                </div>
            </div>

            <!-- Product Information -->
            <div class="w-full md:w-5/12 mt-10 md:mt-0">
                <h2 class="text-3xl font-bold text-main">{{ product.name }}</h2>
                <p class="text-xl font-semibold text-gray-600 mt-2">{{ product.subtitle }}</p>

                <div class="flex items-center mt-4">
                    <span class="text-2xl font-bold text-main">${{ product.price }}</span>
                    <span class="text-sm text-gray-500 ml-4">({{ product.size }} oz)</span>
                </div>

                <div class="mt-4 flex space-x-2">
                    <span class="bg-blue-200 text-blue-800 py-1 px-2 rounded-full text-sm font-medium">In Stock</span>
                    <span class="bg-green-200 text-green-800 py-1 px-2 rounded-full text-sm font-medium">Free Shipping</span>
                </div>

                <p class="mt-6 text-gray-700">{{ product.description }}</p>

                <div class="mt-6">
                    <h3 class="text-lg font-semibold text-main">Choose Flavor:</h3>
                    <select class="w-full mt-2 p-2 border border-gray-300 rounded-md">
                        {% for flavor in product.flavors %}
                        <option value="{{ flavor }}">{{ flavor }}</option>
                        {% endfor %}
                    </select>
                </div>

                <div class="mt-6">
                    <h3 class="text-lg font-semibold text-main">Quantity:</h3>
                    <div class="flex items-center mt-2">
                        <button class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-2 px-4 rounded-l">-</button>
                        <input type="number" value="1" min="1" class="w-16 text-center border-t border-b border-gray-300 focus:outline-none">
                        <button class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold py-2 px-4 rounded-r">+</button>
                    </div>
                </div>

                <form method="post" action="{{ path('detail_product') }}">
                    <button type="submit" class="mt-8 w-full bg-main text-white font-bold py-3 rounded-lg hover:bg-main-dark transition-all duration-200">
                        Add to Cart
                    </button>
                </form>

                <button class="mt-4 w-full bg-yellow-400 text-main font-bold py-3 rounded-lg hover:bg-yellow-500 transition-all duration-200">
                    Subscribe & Save 15%
                </button>

                <!-- Rewards -->
                <div class="mt-4 text-sm text-gray-500">
                    Earn 125 reward points with this purchase.
                </div>
            </div>
        </div>
    </div>

    <!-- Accordion Section -->
    <div class="w-full pt-10 px-10 flex justify-center">
        <div class="w-full max-w-[1300px] space-y-4">

            <!-- Description -->
            <div class="accordion bg-white shadow-lg rounded-lg p-4" id="descriptionAccordion">
                <div class="accordion-header cursor-pointer flex justify-between items-center">
                    <h4 class="text-xl font-bold text-main">Description</h4>
                    <svg class="w-6 h-6 text-main transition-transform transform rotate-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </div>
                <div class="accordion-content mt-4 text-gray-700">
                    {{ product.detailedDescription }}
                </div>
            </div>

            <!-- Product Use Guide -->
            <div class="accordion bg-white shadow-lg rounded-lg p-4" id="useGuideAccordion">
                <div class="accordion-header cursor-pointer flex justify-between items-center">
                    <h4 class="text-xl font-bold text-main">Product Use Guide</h4>
                    <svg class="w-6 h-6 text-main transition-transform transform rotate-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </div>
                <div class="accordion-content mt-4 text-gray-700">
                    {{ product.useGuide }}
                </div>
            </div>

            <!-- Ingredients -->
            <div class="accordion bg-white shadow-lg rounded-lg p-4" id="ingredientsAccordion">
                <div class="accordion-header cursor-pointer flex justify-between items-center">
                    <h4 class="text-xl font-bold text-main">Ingredients</h4>
                    <svg class="w-6 h-6 text-main transition-transform transform rotate-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </div>
                <div class="accordion-content mt-4 text-gray-700">
                    {{ product.ingredients }}
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Add this script to handle the accordion functionality -->
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const accordions = document.querySelectorAll('.accordion');

        accordions.forEach(accordion => {
            accordion.addEventListener('click', function () {
                this.classList.toggle('open');
                const svg = this.querySelector('svg');
                svg.classList.toggle('rotate-180');
            });
        });
    });
</script>
{% endblock body %}
