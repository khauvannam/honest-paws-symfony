{% extends 'base.html.twig' %}

{% block body %}
    {% if product %}
        <div class="container mx-auto text-main">
            {# Breadcrumb Navigation #}
            <div class="w-full pt-5 px-10 flex justify-center">
                <div class="w-full max-w-[1300px] flex items-center text-main">
                    <a href="/" class="hover:underline">Trang chủ</a>
                    <span class="mx-2">></span>
                    <a href="{{ path('all_products', {'productLimit' : 10, 'categoryLimit' : 5}) }}"
                       class="hover:underline">
                        Tất cả sản phẩm</a>
                    <span class="mx-2">></span>
                    <span>{{ product.name }}</span>
                </div>
            </div>
            {# Details #}
            <div class="flex">
                <!-- Product Image -->
                <div class="w-1/2 shadow-lg">
                    <img src="{{ asset('img/blobs/' ~ product.imageUrl) }}" alt="Product Image">
                </div>

                <!-- Product Details -->
                <div class="w-1/2 pl-8">
                    <h2 class="text-4xl font-bold mb-12 mt-24">{{ product.name }}</h2>
                    <p class="text-lg mb-12">{{ product.description }}</p>

                    <!-- Product Price -->
                    <div class="flex items-center mb-12">
                        <div id="totalPrice" class="text-3xl font-bold text-red-600 mr-2">
                            ${{ '%0.2f'|format(product.getDiscountedPrice()) }}</div>
                        <div class="text-gray-500 line-through">${{ product.price }}</div>
                        <div class="ml-4 bg-red-100 text-red-600 px-2 py-1 rounded">
                            SAVE {{ product.discountPercent }}%
                        </div>
                    </div>
                    <!-- Quantity Selector -->
                    <div class="flex items-center mb-12">
                        <div class="flex items-center border border-black justify-between max-w-[120px] px-0.5 rounded-md hover:border-[#fadc6f]">
                            <button type="button"
                                    id="decreaseQuantity"
                                    class="size-10 leading-10 text-gray-600 transition hover:opacity-75">
                                &minus;
                            </button>
                            <input
                                    id="quantityInput"
                                    type="number"
                                    value="1"
                                    min="1"
                                    max="20"
                                    class=" h-12 w-16 border-transparent text-center [-moz-appearance:_textfield] sm:text-sm [&::-webkit-inner-spin-button]:m-0 [&::-webkit-inner-spin-button]:appearance-none [&::-webkit-outer-spin-button]:m-0 [&::-webkit-outer-spin-button]:appearance-none "
                            />
                            <button type="button"
                                    id="increaseQuantity"
                                    class="size-10 leading-10 text-gray-600 transition hover:opacity-75">
                                &plus;
                            </button>
                        </div>
                        <div>
                            <p class="mx-5">Còn hàng</p>
                        </div>
                    </div>
                    <div class="flex my-8 items-center mb-12">
                        <!-- Stock Status -->
                        <div class="w-full">
                            <!-- Add a valid href if "Add to Cart" should be a link, or change to a button -->
                            {{ form_start(cartForm, {'attr': {'action': path('cart_new', {'productId' : product.id})}}) }}
                            {{ form_widget(cartForm.productId, {'value': product.id}) }}
                            {{ form_widget(cartForm.quantity, {'value': 1}) }}
                            {{ form_widget(cartForm.imgUrl, {'value': product.imageUrl}) }}
                            {{ form_widget(cartForm.name, {'value': product.name}) }}
                            {{ form_widget(cartForm.price, {'value': product.getDiscountedPrice}) }}
                            <button type="submit"
                                    class="h-[54px] w-full flex justify-center items-center bg-[#00205c] hover:border-[#00205c] hover:border-2 hover:bg-[#FADC6F] group transition-all duration-200 rounded-md">
                                <p class="text-white group-hover:text-main">
                                    Thêm vào giỏ
                                </p>
                            </button>
                            {{ form_end(cartForm) }}
                        </div>
                    </div>
                    <div class="mt-4 pr-4">
                        <h3 class="text-xl font-semibold mb-2">Hướng dẫn sử dụng</h3>
                        <p>{{ product.productUseGuide }}</p>
                    </div>
                </div>
            </div>

            {# Comment Section #}
            <div class="mt-10">
                <h3 class="text-2xl font-semibold mb-4">Comments</h3>
                <form action="#" method="POST" class="space-y-4">
                    <!-- Comment Textarea -->
                    <div>
                        <label for="comment" class="block text-sm font-medium text-gray-700">Comment</label>
                        <textarea id="comment" name="comment" rows="4" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#FADC6F] focus:border-[#FADC6F] sm:text-sm"></textarea>
                    </div>

                    <!-- Submit Button -->
                    <div>
                        <button type="submit" class="h-12 w-full flex justify-center items-center bg-[#00205c] hover:border-[#00205c] hover:border-2 hover:bg-[#FADC6F] group transition-all duration-200 rounded-md">
                            <p class="text-white group-hover:text-main">Submit Comment</p>
                        </button>
                    </div>
                </form>
            </div>

            {# Display Comments #}
            <div class="mt-8 space-y-4">
                <div class="p-4 border rounded-md bg-gray-50">
                    <h4 class="font-bold">John Doe</h4>
                    <p>This is an example comment.</p>
                    <p class="text-gray-500 text-sm">2024-08-14 14:35</p>
                </div>
                <!-- Additional comments can be added here -->
            </div>

        </div>
    {% else %}
        <p>Product not found.</p>
    {% endif %}
{% endblock %}
