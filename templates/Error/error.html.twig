{% extends 'base.html.twig' %}
{% block body %}
    
<section>
  <!-- Container -->
  <div class="px-5 py-16 md:px-10 md:py-20">
    <!-- Component -->
    <div class="mx-auto flex w-full max-w-3xl flex-col items-center text-center">
      <h1 class="mb-4 text-4xl font-bold md:text-6xl">Error {{ statusCode }}</h1>
      <p class="mx-auto mb-5 max-w-lg text-sm text-gray-500 sm:text-base md:mb-6 lg:mb-8">{{ message }}</p>
      <a href="/" class="inline-block items-center rounded-md bg-black px-8 py-4 text-center font-semibold text-white"> Trở về trang chủ </a>
    </div>
  </div>
</section>
{% endblock %}
